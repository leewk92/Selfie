<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.estsoft.pilotproject.leewonkyung.selfie">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity
            android:name=".Controller.A1_CameraContainer"
            android:label="@string/app_name"
            android:theme="@style/MaterialTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Controller.A2_EditPhoto"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name=".Controller.A2_4_Sticker"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name=".Controller.A2_1_EditColor"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

    </application>

</manifest>
